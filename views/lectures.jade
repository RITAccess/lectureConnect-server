extends layout

block content
	h1 #{lecture.name}
		if (lecture.isActive)
			i.icon-ok-sign.status 
				.status Online
		else
			i.icon-minus-sign.status 
				.status Offline
	p #{lecture.description}
	p
		if (lecture.isActive)
			a(href='/kill/'+lecture._id) Stop
		else 
			a(href='/start/'+lecture._id) Start
