body
.navbar.navbar-fixed-top
    .navbar-inner
        .container
            button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.brand(href='#')= title
            .nav-collapse.collapse
                p.navbar-text.pull-right
                    | Logged in as #{account}
                ul.nav
                    li.active
                        a(href='#') Home
                    li
                        a(href='#about') Status
                    li
                        a(href='/logout') Logout

